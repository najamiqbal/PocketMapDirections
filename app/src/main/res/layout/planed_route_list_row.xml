<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/rowlayoutPlaned"
    android:foreground="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_distance"
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/starttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dot"
        android:textColor="@color/colorPrimary"
        android:text="Sialkot"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/starttv"
        android:layout_toRightOf="@id/dot"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="To"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/destinationtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_toRightOf="@id/dot"
        android:textColor="@color/colorPrimary"
        android:text="Sialkot"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationtv"
        android:layout_toRightOf="@id/dot"
        android:textColor="#000"
        android:text="Sialkot"
        android:textSize="12sp" />


    <ImageButton
        android:src="@drawable/ic_delete_black_24dp"
        android:id="@+id/deleteRoute"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destinationtv"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:src="@drawable/ic_navigation_black_24dp"
        android:id="@+id/NavRoute"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destinationtv"
        android:layout_toLeftOf="@id/deleteRoute"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:layout_toStartOf="@id/deleteRoute"
        android:layout_marginEnd="10dp" />

</RelativeLayout>